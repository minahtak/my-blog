    <nav>
        <h2><a href={isKorean ? "/ko" : "/"}>{SITE_TITLE}</a></h2>
        <div class="internal-links">
            <HeaderLink href={isKorean ? "/ko" : "/"}>Home</HeaderLink>
            <HeaderLink href={isKorean ? "/ko/explore" : "/explore"}>Explore</HeaderLink>
            <HeaderLink href={isKorean ? "/ko/builds" : "/builds"}>Builds</HeaderLink>
