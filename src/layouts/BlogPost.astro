---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			@import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600&family=Inter:wght@300;400;500&display=swap');
			
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			body {
				background-color: #ffffff;
				color: #000000;
				font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
				line-height: 1.6;
				display: flex;
				flex-direction: column;
				min-height: 100vh;
			}

			main {
				width: 100%;
				max-width: 1200px;
				margin: 0 auto;
				padding: 0;
				flex: 1;
			}

			article {
				width: 100%;
			}

			/* Hero Section */
			.hero-image {
				width: 100%;
				max-width: 720px;
				margin: 8rem auto 4rem;
				overflow: hidden;
				border: 1px solid #e0e0e0;
				border-radius: 8px;
			}

			.hero-image img {
				width: 100%;
				height: auto;
				max-height: 480px;
				object-fit: cover;
				display: block;
			}

			/* Article Header */
			.article-header {
				max-width: 720px;
				margin: 0 auto 4rem;
				padding: 0 2rem;
				text-align: center;
			}

			/* Add top margin when there's no hero image */
			.article-header.no-hero {
				margin-top: 8rem;
			}

			.article-meta {
				margin-bottom: 2rem;
			}

			.article-date {
				text-transform: uppercase;
				letter-spacing: 0.1em;
				font-size: 0.75rem;
				color: #999999;
				display: block;
				margin-bottom: 0.5rem;
			}

			.last-updated-on {
				font-size: 0.75rem;
				color: #999999;
				font-weight: 300;
				font-style: italic;
			}

			.article-title {
				font-family: 'Playfair Display', Georgia, serif;
				font-size: clamp(2.5rem, 6vw, 4rem);
				font-weight: 400;
				letter-spacing: -0.02em;
				line-height: 1.2;
				color: #000000;
				margin: 0 0 1.5rem 0;
			}

			.article-divider {
				width: 60px;
				height: 2px;
				background: #000000;
				border: none;
				margin: 0 auto;
			}

			/* Article Content */
			.prose {
				max-width: 720px;
				margin: 0 auto;
				padding: 0 2rem 6rem;
				color: #333333;
				font-size: 1.0625rem;
				line-height: 1.8;
			}

			/* Typography */
			.prose :global(h1),
			.prose :global(h2),
			.prose :global(h3),
			.prose :global(h4),
			.prose :global(h5),
			.prose :global(h6) {
				font-family: 'Playfair Display', Georgia, serif;
				font-weight: 400;
				line-height: 1.3;
				color: #000000;
				margin-top: 2.5rem;
				margin-bottom: 1rem;
			}

			.prose :global(h2) {
				font-size: 2rem;
				margin-top: 3rem;
			}

			.prose :global(h3) {
				font-size: 1.5rem;
			}

			.prose :global(h4) {
				font-size: 1.25rem;
			}

			.prose :global(p) {
				margin-bottom: 1.5rem;
			}

			.prose :global(a) {
				color: #000000;
				text-decoration: underline;
				text-decoration-color: #cccccc;
				text-underline-offset: 3px;
				transition: all 0.2s ease;
			}

			.prose :global(a:hover) {
				text-decoration-color: #000000;
			}

			.prose :global(strong) {
				font-weight: 500;
				color: #000000;
			}

			.prose :global(em) {
				font-style: italic;
			}

			.prose :global(blockquote) {
				border-left: 3px solid #000000;
				padding-left: 2rem;
				margin: 2rem 0;
				font-style: italic;
				color: #666666;
			}

			.prose :global(code) {
				background: #f5f5f5;
				padding: 0.2em 0.4em;
				border-radius: 3px;
				font-size: 0.9em;
				font-family: 'Courier New', Courier, monospace;
			}

			.prose :global(pre) {
				background: #f5f5f5;
				padding: 1.5rem;
				border-radius: 8px;
				overflow-x: auto;
				margin: 2rem 0;
				border: 1px solid #e0e0e0;
			}

			.prose :global(pre code) {
				background: none;
				padding: 0;
			}

			.prose :global(ul),
			.prose :global(ol) {
				margin: 1.5rem 0;
				padding-left: 2rem;
			}

			.prose :global(li) {
				margin-bottom: 0.5rem;
			}

			.prose :global(img) {
				max-width: 100%;
				height: auto;
				margin: 2rem 0;
				border-radius: 8px;
				border: 1px solid #e0e0e0;
			}

			.prose :global(hr) {
				border: none;
				height: 1px;
				background: #e0e0e0;
				margin: 3rem 0;
			}

			/* Back Link */
			.back-link {
				max-width: 720px;
				margin: 0 auto;
				padding: 0 2rem 4rem;
			}

			.back-link a {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				color: #666666;
				text-decoration: none;
				font-size: 0.9rem;
				font-weight: 300;
				letter-spacing: 0.05em;
				text-transform: uppercase;
				transition: color 0.2s ease;
			}

			.back-link a:hover {
				color: #000000;
			}

			.back-link a::before {
				content: '‚Üê';
				font-size: 1.2rem;
			}

			@media (max-width: 768px) {
				.hero-image {
					margin-top: 4rem;
					margin-bottom: 3rem;
					border-radius: 0;
					border-left: none;
					border-right: none;
				}

				.hero-image img {
					max-height: 300px;
				}

				.article-header {
					margin-bottom: 3rem;
					padding: 0 1.5rem;
				}

				.article-header.no-hero {
					margin-top: 4rem;
				}

				.prose {
					padding: 0 1.5rem 4rem;
					font-size: 1rem;
				}

				.prose :global(h2) {
					font-size: 1.75rem;
				}

				.prose :global(h3) {
					font-size: 1.35rem;
				}

				.back-link {
					padding: 0 1.5rem 3rem;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				{heroImage && (
					<div class="hero-image">
						<Image width={720} height={480} src={heroImage} alt={title} />
					</div>
				)}
				
				<header class:list={["article-header", { "no-hero": !heroImage }]}>
					<div class="article-meta">
						<time class="article-date">
							<FormattedDate date={pubDate} />
						</time>
						{updatedDate && (
							<div class="last-updated-on">
								Last updated on <FormattedDate date={updatedDate} />
							</div>
						)}
					</div>
					<h1 class="article-title">{title}</h1>
					<hr class="article-divider" />
				</header>

				<div class="prose">
					<slot />
				</div>

				<div class="back-link">
					<a href="/blog">Back to Logs</a>
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>