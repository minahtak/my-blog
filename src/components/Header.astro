---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";

const { pathname } = Astro.url;
const normalizedPath = pathname.replace(/\/$/, "") || "/";
const isKorean = normalizedPath === "/ko" || normalizedPath.startsWith("/ko/");

const getTargetUrl = (lang: "en" | "ko") => {
    if (lang === "ko") {
        if (isKorean) return pathname;
        return `/ko${normalizedPath === "/" ? "" : normalizedPath}`;
    } else {
        if (!isKorean) return pathname;
        const enPath = normalizedPath.replace(/^\/ko/, "");
        return enPath === "" ? "/" : enPath;
    }
};
