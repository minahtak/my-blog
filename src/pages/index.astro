---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title='Minah Tak' description={SITE_DESCRIPTION} />
		<style>
			@import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600&family=Inter:wght@300;400;500&display=swap');
			
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			body {
				background-color: #ffffff;
				color: #000000;
				font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
				line-height: 1.6;
			}

			main {
				width: 100%;
				max-width: 900px;
				margin: 0 auto;
				padding: 8rem 2rem 4rem;
				min-height: 80vh;
			}

			/* Hero Section */
			.hero {
				margin-bottom: 8rem;
			}

			.hero-title {
				font-family: 'Playfair Display', Georgia, serif;
				font-size: clamp(3.5rem, 10vw, 7rem);
				font-weight: 400;
				letter-spacing: -0.02em;
				line-height: 1.1;
				margin-bottom: 3rem;
				color: #000000;
			}

			.hero-description {
				font-size: 1.125rem;
				font-weight: 300;
				line-height: 1.8;
				max-width: 600px;
				color: #333333;
				margin-bottom: 4rem;
			}

			.hero-meta {
				display: flex;
				gap: 3rem;
				font-size: 0.875rem;
				color: #666666;
				border-top: 1px solid #e0e0e0;
				padding-top: 2rem;
			}

			.meta-item {
				display: flex;
				flex-direction: column;
				gap: 0.25rem;
			}

			.meta-label {
				text-transform: uppercase;
				letter-spacing: 0.1em;
				font-size: 0.75rem;
				color: #999999;
			}

			.meta-value {
				color: #000000;
			}

			/* Navigation Grid */
			.nav-grid {
				display: grid;
				grid-template-columns: repeat(2, 1fr);
				gap: 1px;
				background-color: #e0e0e0;
				border: 1px solid #e0e0e0;
				margin-bottom: 6rem;
			}

			.nav-card {
				background: #ffffff;
				padding: 3rem 2rem;
				text-decoration: none;
				color: inherit;
				transition: all 0.3s ease;
				position: relative;
				overflow: hidden;
			}

			.nav-card::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				width: 0;
				height: 2px;
				background: #000000;
				transition: width 0.3s ease;
			}

			.nav-card:hover::before {
				width: 100%;
			}

			.nav-card:hover {
				background: #fafafa;
			}

			.nav-card h3 {
				font-family: 'Playfair Display', Georgia, serif;
				font-size: 1.75rem;
				font-weight: 400;
				margin-bottom: 0.75rem;
				color: #000000;
			}

			.nav-card p {
				font-size: 0.9rem;
				font-weight: 300;
				color: #666666;
				line-height: 1.6;
			}

			/* Footer note */
			.footer-note {
				text-align: center;
				font-size: 0.875rem;
				color: #999999;
				font-weight: 300;
				padding: 4rem 0;
				border-top: 1px solid #e0e0e0;
			}

			@media (max-width: 768px) {
				main {
					padding: 4rem 1.5rem 3rem;
				}

				.hero-title {
					margin-bottom: 2rem;
				}

				.hero-meta {
					flex-direction: column;
					gap: 1.5rem;
				}

				.nav-grid {
					grid-template-columns: 1fr;
				}

				.nav-card {
					padding: 2.5rem 1.5rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<h1 class="hero-title">Minah Tak</h1>
				
				<p class="hero-description">
					A student cataloguing the process of creating, learning, and growing. 
					From lines of code to things fresh out of the ovenâ€”this is my personal 
					directory of ideas, builds, and everyday moments.
				</p>

				
			</section>

			<nav class="nav-grid">
				<a href="/explore" class="nav-card">
					<h3>Explore</h3>
					<p>Random thoughts, questions, and things I notice along the way.</p>
				</a>

				<a href="/builds" class="nav-card">
					<h3>Builds</h3>
					<p>Projects I'm working on, have finished, or am still figuring out.</p>
				</a>

				<a href="/blog" class="nav-card">
					<h3>Logs</h3>
					<p>Journal entries, everyday stories, baking experiments, and more.</p>
				</a>

				<a href="/me" class="nav-card">
					<h3>About</h3>
					<p>More about who I am, what I value, and how I see the world.</p>
				</a>
			</nav>

			<div class="footer-note">
				Making things, one step at a time.
			</div>
		</main>
		<Footer />
	</body>
</html>