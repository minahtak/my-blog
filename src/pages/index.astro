---
import BaseHead from '../components/BaseHead.astro';
import { SITE_DESCRIPTION } from '../consts';
import App from '../App';
import '../styles/global.css';  // ← 이 줄 추가!



---

<!doctype html>
<html lang="ko">
	<head>
		<BaseHead title='Minah Tak | Personal Brand' description={SITE_DESCRIPTION} />
		
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200;0,400;0,700;0,800;1,400&family=Instrument+Serif:ital@0;1&family=Space+Grotesk:wght@300;500;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<div id="cursor-prism"></div>
		<div id="cursor-dot"></div>

		<App client:load />
	</body>
</html>

<script>
	const prism = document.getElementById('cursor-prism');
	const dot = document.getElementById('cursor-dot');
	
	document.addEventListener('mousemove', (e) => {
		if (prism && dot) {
			prism.style.left = e.clientX + 'px';
			prism.style.top = e.clientY + 'px';
			dot.style.left = e.clientX + 'px';
			dot.style.top = e.clientY + 'px';
		}
	});

	document.addEventListener('mousedown', () => {
		if (prism) {
			prism.style.transform = 'translate(-50%, -50%) scale(1.5)';
			prism.style.borderColor = '#fbbf24';
		}
	});
	
	document.addEventListener('mouseup', () => {
		if (prism) {
			prism.style.transform = 'translate(-50%, -50%) scale(1)';
			prism.style.borderColor = '#6366f1';
		}
	});
</script>